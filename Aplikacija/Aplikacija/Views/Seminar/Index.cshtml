@model IEnumerable<Aplikacija.Models.Seminar>

@{
    ViewBag.Title = "Index";
}

<h2>Popis seminara</h2>

<p>
    @Html.ActionLink("Dodaj novi", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Datum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Popunjen)
        </th>
        <th>
            @Html.DisplayName("Broj polaznika")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Datum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Popunjen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Predbiljezba.Count)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdSeminar }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdSeminar }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdSeminar })
        </td>
    </tr>
}

</table>
